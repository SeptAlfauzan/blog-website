    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if(blogs.length > 0){ %>
            <% blogs.map(blog => { %>
                <a class="single blog-item" href="/blogs/<%= blog._id %> ">
                    <h3><%= blog.title %> </h3>
                    <p><%= blog.snippet %> </p>
                </a>
            <% }) %>  
        <% }else{ %> 
            <p>no blogs yet..</p>
        <% } %> 
    </div>
